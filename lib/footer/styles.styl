.Footer
	background white
	margin 0
	padding 1rem 0 0 0

.Footer-item
	text-align center
	margin2rem 20%
	padding 0
	border-top 3px dashed #4278bc

.Footer-info
	text-align center

.Tel:before, .Mail:before
	margin-right 0.5rem

.Tel:before
	font-family 'Flaticon'
	content "\e008"

.Mail:before
	font-family 'Flaticon'
	content "\e004"

.Social-twitter:after
	font-family 'Flaticon'
	content "\e009"
	color #59adeb

.Social-facebook:after
	font-family 'Flaticon'
	content "\e001"
	color #3c5a96			
	
.Social-google:after
	font-family 'Flaticon'
	content "\e002"
	color #dd4b39

.Social-items
	font-size 3rem
	text-decoration none

.Subfooter
	text-align center
	background #3eb54a
	color white
	margin 0
	padding 0
	
@media screen and (min-width: 768px)
	.Footer
		text-align center
		width 100%

	.Footer-info
		text-align left
		margin 0

	.Footer-item
		display inline-block
		margin 0 
		padding 0 5%
		border none
		vertical-align top

	.Footer-button
		font-size 1rem
		width 8rem
		height 2rem
		margin 1rem 0